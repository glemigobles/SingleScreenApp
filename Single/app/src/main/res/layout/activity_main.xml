<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context="com.example.jsura.singlescreenapp.MainActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/tlo"
        android:padding="5dp"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="135dp"
            android:src="@drawable/logo"
            android:layout_weight="0.02" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryOpacity"
            android:gravity="center"
            android:text="wooden art workshop"
            android:textSize="20sp"
            android:textColor="@color/colorWhite"/>
    
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@color/colorWhiteOpacity"
            android:orientation="horizontal">
            
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Who we are? "
                    android:textColor="@color/colorPrimary"
                    android:padding="10dp"/> />
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Wood and art is our passion, everything we create is made with love and attention to detail.  Our workshop offers unique wooden hand-made furniture designed to match high expectations."
                    android:padding="10dp"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/pic1"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/pic2"/>

            </LinearLayout>




        </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@color/colorWhiteOpacity"
        android:orientation="horizontal">


        <ImageButton
            android:layout_width="100dp"
            android:layout_height="55dp"
            android:src="@drawable/home"
            android:scaleType="fitCenter"
            android:layout_weight="1"
            android:onClick="openWebPage"
            android:background="@color/colorOpacity"
            android:layout_margin="5dp"/>

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="55dp"
            android:src="@drawable/phone"
            android:scaleType="fitCenter"
            android:layout_weight="1"
            android:onClick="openCallMenu"
            android:background="@color/colorOpacity"
            android:layout_margin="5dp"/>
        <ImageButton
            android:layout_width="100dp"
            android:layout_height="55dp"
            android:src="@drawable/placeholder"
            android:scaleType="fitCenter"
            android:onClick="openMaps"
            android:layout_weight="1"
            android:background="@color/colorOpacity"
            android:layout_margin="5dp"/>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/colorPrimaryOpacity"
        android:orientation="horizontal">



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Our Webpage"
            android:textColor="@color/colorWhite"
            android:layout_weight="1"
            android:gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Call Us"
            android:textColor="@color/colorWhite"
            android:layout_weight="1"
            android:gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Visit Us"
            android:textColor="@color/colorWhite"
            android:layout_weight="1"
            android:gravity="center"/>

    </LinearLayout>

    </LinearLayout>


